---
import enStrings from "@utils/navigation.ts";
import Icon from "@components/ui/icons/Icon.astro";
import { SITE } from "@data/constants";
import LightModeBrandLogo from "@/components/LightModeBrandLogo.astro";
import DarkModeBrandLogo from "../DarkModeBrandLogo.astro";

const strings = enStrings;
const sectionThreeTitle: string = "Contactanos";
const arrepentimiento: string = "Arrepentimiento";
---

<footer class="w-full bg-neutral-300 dark:bg-neutral-900">
  <div class="mx-auto w-full max-w-[85rem] px-4 py-10 sm:px-6 lg:px-16 lg:pt-20 2xl:max-w-screen-2xl">
    <div class="grid grid-cols-2 gap-6 md:grid-cols-4">
      <div class="col-span-full hidden hs-dark-mode-active:block lg:col-span-1">
        <LightModeBrandLogo />
      </div>
      <div class="col-span-full hs-dark-mode-active:hidden lg:col-span-1">
        <DarkModeBrandLogo />
      </div>
      {
        strings.footerLinks.map((section) => (
          <div class="col-span-1">
            <h3 class="font-bold text-neutral-800 dark:text-neutral-200">{section.section}</h3>
            <ul
              class={`mt-3 flex w-fit ${section.section === "Servicios" && "flex-col"} ${section.section === "Redes Sociales" && "flex-wrap"} gap-4 lg:flex-row`}
            >
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.url}
                    class={`inline-flex gap-x-2 text-nowrap rounded-lg border-yellow-500 text-neutral-600 outline-none ring-zinc-500 transition duration-300 focus-visible:ring dark:text-neutral-400 dark:ring-zinc-200 dark:hover:text-yellow-400 dark:focus:outline-none`}
                  >
                    {section.section === "Servicios" ? link.name : <Icon name={link.name} />}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <div class="col-span-1 hidden justify-between md:flex">
        <div class="flex h-fit w-fit items-center justify-center rounded-2xl bg-white p-2 dark:bg-black md:ml-auto xl:mx-auto">
          <a
            href="/contacto"
            class="cursor-pointer rounded-lg border-2 border-black p-2 font-bold text-neutral-800 hover:border-yellow-500 hover:text-yellow-500 dark:border-white dark:text-neutral-200 dark:hover:border-yellow-400 dark:hover:text-yellow-400"
          >
            {sectionThreeTitle}
          </a>
        </div>

        <div class="flex h-fit w-fit items-center justify-center rounded-2xl bg-white p-2 dark:bg-black md:ml-auto xl:mx-auto">
          <a
            href="/arrepentimiento"
            class="cursor-pointer rounded-lg border-2 border-black p-2 font-bold text-neutral-800 hover:border-yellow-500 hover:text-yellow-500 dark:border-white dark:text-neutral-200 dark:hover:border-yellow-400 dark:hover:text-yellow-400"
          >
            {arrepentimiento}
          </a>
        </div>
      </div>

      <!-- <div class="col-span-1 flex justify-between "> -->
      <div class="col-span-1 flex h-fit w-fit items-center justify-center rounded-2xl bg-white p-2 dark:bg-black md:ml-auto md:hidden xl:mx-auto">
        <a
          href="/contacto"
          class="cursor-pointer rounded-lg border-2 border-black p-2 font-bold text-neutral-800 hover:border-yellow-50 hover:text-yellow-50 dark:border-white dark:text-neutral-200 dark:hover:border-yellow-400 dark:hover:text-yellow-400"
        >
          {sectionThreeTitle}
        </a>
      </div>

      <div class="col-span-1 flex h-fit w-fit items-center justify-center rounded-2xl bg-white p-2 dark:bg-black md:ml-auto md:hidden xl:mx-auto">
        <a
          href="/arrepentimiento"
          class="cursor-pointer rounded-lg border-2 border-black p-2 font-bold text-neutral-800 hover:border-yellow-50 hover:text-yellow-50 dark:border-white dark:text-neutral-200 dark:hover:border-yellow-400 dark:hover:text-yellow-400"
        >
          {arrepentimiento}
        </a>
      </div>
      <!-- </div> -->
    </div>

    <div class="mt-9 grid gap-y-2 sm:mt-12 sm:flex sm:items-center sm:justify-between sm:gap-y-0">
      <div class="flex items-center justify-between">
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
          Â© <span id="current-year"></span>
          {SITE.title}.
        </p>
      </div>
    </div>

    <script>
      const year = new Date().getFullYear();
      const element = document.getElementById("current-year");
      element!.innerText = year.toString();
    </script>
  </div>
</footer>
