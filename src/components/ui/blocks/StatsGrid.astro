---
import Icon from "@components/ui/icons/Icon.astro";

const { header, description } = Astro.props;

interface Props {
  header: string;
  description: string;
}

const headerLowerCase = header.charAt(0).toLowerCase() + header.substring(1);
---

<li class="-m-0.5 flex flex-col gap-4 p-4 sm:p-8">
  <h3 class="mb-2 flex items-end gap-x-2 text-3xl font-bold text-neutral-800 dark:text-neutral-200 sm:text-5xl">
    {header}
    <Icon name={headerLowerCase} />
  </h3>
  <p class="text-sm text-neutral-600 dark:text-neutral-400 sm:text-base">
    {description}
  </p>
</li>
