---
import Icon from "@components/ui/icons/Icon.astro";

const { header, description } = Astro.props;

interface Props {
  header: string;
  description: string;
}

const headerLowerCase = header.split(" ")[0].replace(/[^\w]/g, "").toLocaleLowerCase();
---

<li class="-m-0.5 flex flex-col gap-4 p-4 sm:p-8">
  <div class="flex items-center gap-x-2">
    <h3 class="flex items-end text-base font-bold text-neutral-800 dark:text-neutral-200 sm:text-3xl">
      {header}
    </h3>
    <Icon name={headerLowerCase} />
  </div>
  <p class="text-sm text-neutral-600 dark:text-neutral-400 sm:text-base">
    {description}
  </p>
</li>
